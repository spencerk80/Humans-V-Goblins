<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.FlowPane?>

<FlowPane alignment="CENTER" minHeight="80.0" minWidth="450.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.spencerk.gui.SelectNameController">
   <children>
      <Label text="Name your character:">
         <FlowPane.margin>
            <Insets right="10.0" />
         </FlowPane.margin>
      </Label>
      <TextField fx:id="nameField" onKeyPressed="#onEnter">
         <FlowPane.margin>
            <Insets right="10.0" />
         </FlowPane.margin>
      </TextField>
      <Button fx:id="submitBtn" mnemonicParsing="false" onAction="#setCharName" text="Play" />
   </children>
</FlowPane>
